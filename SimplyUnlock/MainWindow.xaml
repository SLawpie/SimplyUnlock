<Window x:Class="SimplyUnlock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimplyUnlock"
        mc:Ignorable="d"
        Title="SimplyUnlock" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Width="100" VerticalAlignment="Center">
            <TextBlock x:Name="TextBlock1" Text="LOCKED"  Margin="0 0 0 20" HorizontalAlignment="Center" Foreground="Red" FontSize="22" FontWeight="Bold"/>
            <Button x:Name="Button1" Content="1" Margin="5" Click="Button_Click"/>
            <Button x:Name="Button2" Content="2" Margin="5" Click="Button_Click"/>
            <Button x:Name="Button3" Content="3" Margin="5" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
